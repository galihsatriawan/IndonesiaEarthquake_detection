<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="40dp"
                        android:id="@+id/img_magnitude"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_nama"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/txt_magnitude"
                        android:text="M 3.5"
                        android:textSize="20sp"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margins_normal"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="23dp"
                            android:layout_height="23dp"
                            android:src="@android:drawable/ic_menu_rotate"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:text="55 KM"
                            android:id="@+id/txt_kedalaman"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:layout_marginLeft="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/txt_waktu"
                            android:text="20-Jan-19 14:14 WIB"
                            android:layout_gravity="end"
                            />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="BCAaa"
                        android:id="@+id/txt_lokasi"
                        android:layout_gravity="left"
                        android:layout_marginLeft="@dimen/margins_normal"
                        android:textSize="18sp"/>
                </LinearLayout>

            </LinearLayout>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/margins_normal"
                android:src="@drawable/arrows"/>
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>