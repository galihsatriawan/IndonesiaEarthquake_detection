<?xml version="1.0" encoding="utf-8"?>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="visible"
        android:id="@+id/container_progress_bar"
        android:layout_height="wrap_content">
        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="@dimen/size_progress_bar"
            android:layout_height="@dimen/size_progress_bar"
            android:layout_centerHorizontal="true"
            android:visibility="visible" />
        <TextView
            android:id="@+id/msg_progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/progress_bar"
            android:layout_marginTop="@dimen/margins_normal"
            android:text="@string/title_progress_bar"/>
    </RelativeLayout>
