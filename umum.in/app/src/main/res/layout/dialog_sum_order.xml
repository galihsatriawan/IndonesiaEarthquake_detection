<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:minWidth="@dimen/dialog_min_width"

    >
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWarning"
        android:gravity="center"
        android:minHeight="@dimen/dialog_header_height"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="@dimen/dialog_header_image"
            android:layout_height="@dimen/dialog_header_image"
            android:src="@drawable/img_checkout_success" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|start"
        android:orientation="vertical"
        android:padding="@dimen/spacing_mlarge">


        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_marginLeft="@dimen/margins_normal"
            android:layout_marginRight="@dimen/margins_normal"

            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/title"
                android:textSize="30sp"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textColor="@color/grey_90"
                android:layout_gravity="center"
                android:text="Rincian Order"/>
            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cont_detail_order"
                
                android:layout_margin="@dimen/margins_normal"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/cont_txt_alamat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margins_normal"
                    android:layout_marginLeft="@dimen/margins_normal"
                    android:orientation="horizontal">

                    <TextView

                        android:layout_width="@dimen/width_space"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/ubuntu_light"
                        android:text="Lokasi"
                        android:textColor="@android:color/black"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/ubuntu_light"
                        android:text=":"
                        android:textColor="@android:color/black"
                        android:textStyle="bold" />


                </LinearLayout>
                <TextView
                    android:id="@+id/SumTxtAlamat"
                    android:layout_marginStart="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:fontFamily="@font/ubuntu_light"
                    android:text="Jatiguwi RT 19 RW 5 Dusun Krajan, Sumberpucung Kab. Malang Jawa Timur Indonesia "
                    android:textColor="@android:color/black"
                    android:textStyle="bold" />


                <LinearLayout
                    android:id="@+id/cont_txt_jasa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margins_normal"
                    android:layout_marginLeft="@dimen/margins_normal"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="@dimen/width_space"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/ubuntu_light"
                        android:text="Jasa"
                        android:textColor="@android:color/black"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/ubuntu_light"
                        android:text=":"
                        android:textColor="@android:color/black"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/SumTxtJasa"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:fontFamily="@font/ubuntu_light"
                        android:text="Servis Laptop"
                        android:textColor="@android:color/black"
                        android:textStyle="bold" />
                </LinearLayout>
               
                

                <LinearLayout
                    android:id="@+id/cont_txt_uraian"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margins_normal"
                    android:layout_marginLeft="@dimen/margins_normal"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="@dimen/width_space"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/ubuntu_light"
                        android:text="Rincian Kerusakan"
                        android:textColor="@android:color/black"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/ubuntu_light"
                        android:text=":"
                        android:textColor="@android:color/black"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/SumTxtDeskripsi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:fontFamily="@font/ubuntu_light"
                        android:text="Install Ulang Laptop"
                        android:textColor="@android:color/black"
                        android:textStyle="bold" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/cont_txt_vendor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margins_normal"
                    android:layout_marginLeft="@dimen/margins_normal"
                    android:orientation="horizontal">

                    <TextView

                        android:layout_width="@dimen/width_space"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/ubuntu_light"
                        android:text="Nama Vendor"
                        android:textColor="@android:color/black"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/ubuntu_light"
                        android:text=":"
                        android:textColor="@android:color/black"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/SumTxtVendor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:fontFamily="@font/ubuntu_light"
                        android:text="Servis Center"
                        android:textColor="@android:color/black"
                        android:textStyle="bold" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/cont_txt_catatan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margins_normal"
                    android:layout_marginLeft="@dimen/margins_normal"
                    android:orientation="horizontal">

                    <TextView

                        android:layout_width="@dimen/width_space"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/ubuntu_light"
                        android:text="Catatan"
                        android:textColor="@android:color/black"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/ubuntu_light"
                        android:text=":"
                        android:textColor="@android:color/black"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/SumTxtCatatan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:fontFamily="@font/ubuntu_light"
                        android:text="Konfirmasi dahulu sebelum datang atau berangkat"
                        android:textColor="@android:color/black"
                        android:textStyle="bold" />
                </LinearLayout>

                

                
            

            </LinearLayout>
            
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lyt_action"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_middle"
        android:gravity="end"
        android:orientation="horizontal"
        android:paddingRight="@dimen/spacing_large">

        <Button
            android:id="@+id/bt_negative"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/CANCEL"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            android:textColor="@color/grey_80"
            android:textStyle="bold" />

        <Button
            android:id="@+id/bt_positive"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/OK"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            android:textColor="@color/grey_90"
            android:textStyle="bold" />

    </LinearLayout>
</LinearLayout>
</LinearLayout>